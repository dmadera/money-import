{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "publishexe",
            "command": "cp ${workspaceFolder}/bin/Debug/netcoreapp3.1/win-x64/publish/moneys4-import.exe ${workspaceFolder}/../moneys4-import/ && cp ${workspaceFolder}/bin/Debug/netcoreapp3.1/win-x64/publish/moneys4-import.exe ${workspaceFolder}/z-assets/",
            "type": "shell",
            "args": [],
            "dependsOn": [
                "publish"
            ]
        },
        {
            "label": "buildxsd",
            "command": "${workspaceFolder}/xsd/generate-cs",
            "type": "shell",
            "args": [],
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/moneys4-import.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/moneys4-import.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--runtime", "win-x64",
                "/p:PublishSingleFile=true"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/moneys4-import.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}